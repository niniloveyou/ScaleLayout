<?xml version="1.0" encoding="utf-8"?>
<deadline.scalelayout.scaleViewPager.ViewPagerScaleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scale_layout"
    android:background="@android:color/black"
    tools:context=".scaleViewPager.ScaleViewPagerActivity">

    <TextView
        android:id="@id/scaleLayout_top"
        android:text="Title here"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <HorizontalScrollView
        android:id="@id/scaleLayout_bottom"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_image"
            android:layout_margin="20dp"
            android:src="@mipmap/logo_qq_n"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_qzone_n"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_wechat_n"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_wechatmoments"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_sinaweibo_n"/>

        </LinearLayout>
    </HorizontalScrollView>

    <deadline.scalelayout.scaleViewPager.MultiViewPager
        android:id="@id/scaleLayout_center"
        app:matchChildWidth="@+id/child_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</deadline.scalelayout.scaleViewPager.ViewPagerScaleLayout>
